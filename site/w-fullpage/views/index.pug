doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title FullPage
    link(rel="stylesheet" type="text/css" href="../../lib/bower_components/fullpage.js/dist/jquery.fullpage.min.css")
    link(rel="stylesheet" type="text/css" href="public/css/sass.min.css")
